{
  "name": "clippy-revival",
  "version": "2.0.0",
  "description": "A modern, privacy-first AI desktop assistant with multi-model support, RAG, voice control, and cross-platform compatibility",
  "main": "electron/main.js",
  "author": "Clippy Revival Team",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/clippy-revival",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/clippy-revival.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/clippy-revival/issues"
  },
  "keywords": [
    "ai",
    "assistant",
    "clippy",
    "desktop",
    "electron",
    "ollama",
    "anthropic",
    "openai",
    "rag",
    "voice",
    "automation",
    "productivity",
    "privacy"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:backend": "powershell -ExecutionPolicy Bypass -File scripts/build-backend.ps1",
    "build:win": "npm run build:renderer && electron-builder --win zip",
    "build:mac": "npm run build:renderer && electron-builder --mac dmg",
    "build:linux": "npm run build:renderer && electron-builder --linux AppImage",
    "build:all": "npm run build:renderer && electron-builder --win --mac --linux",
    "pack": "npm run build:renderer && npm run build:backend && electron-builder --win zip",
    "pack:mac": "npm run build:renderer && electron-builder --mac dmg",
    "pack:linux": "npm run build:renderer && electron-builder --linux AppImage",
    "pack:all": "npm run build:renderer && electron-builder -mwl",
    "package": "powershell -ExecutionPolicy Bypass -File scripts/package.ps1",
    "package:quick": "powershell -ExecutionPolicy Bypass -File scripts/package.ps1 -SkipBackend",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "cd backend && pytest tests/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:backend && npm run test:e2e",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "lint:python": "cd backend && ruff check . && black --check .",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css}\"",
    "format:python": "cd backend && black . && ruff check . --fix"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.4",
    "axios": "^1.13.2",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "recharts": "^3.3.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "style-loader": "^4.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.clippyrevival.app",
    "productName": "Clippy Revival",
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json",
      "!backend",
      "!src",
      "!scripts",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "backend/dist/clippy-backend/",
        "to": "backend/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "characters/default/",
        "to": "characters/default/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "assets/icon.png",
      "category": "Utility",
      "synopsis": "AI-powered desktop assistant",
      "description": "A modern AI-powered desktop assistant with local LLM support"
    },
    "compression": "normal",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ]
  }
}
