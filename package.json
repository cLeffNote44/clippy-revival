{
  "name": "clippy-revival",
  "version": "1.0.0",
  "description": "A modern AI-powered desktop assistant for Windows",
  "main": "electron/main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:backend": "powershell -ExecutionPolicy Bypass -File scripts/build-backend.ps1",
    "build:win": "npm run build:renderer && electron-builder --win zip",
    "pack": "npm run build:renderer && npm run build:backend && electron-builder --win zip",
    "package": "powershell -ExecutionPolicy Bypass -File scripts/package.ps1",
    "package:quick": "powershell -ExecutionPolicy Bypass -File scripts/package.ps1 -SkipBackend",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "cd backend && pytest tests/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:backend && npm run test:e2e",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "lint:python": "cd backend && ruff check . && black --check .",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css}\"",
    "format:python": "cd backend && black . && ruff check . --fix"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.3",
    "@mui/material": "^5.15.3",
    "axios": "^1.6.5",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.2",
    "recharts": "^2.10.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.2.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.9.0",
    "electron": "^38.3.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "style-loader": "^3.3.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.clippyrevival.app",
    "productName": "Clippy Revival",
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json",
      "!backend",
      "!src",
      "!scripts",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "backend/dist/clippy-backend/",
        "to": "backend/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "characters/default/",
        "to": "characters/default/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "compression": "normal",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ]
  }
}
